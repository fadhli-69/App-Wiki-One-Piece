<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WikipediaOnePiece" parent="Theme.AppCompat.DayNight">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/colorPrimaryBlue</item>
        <item name="colorOnPrimary">@android:color/holo_orange_dark</item>

    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="TextContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextContent.BodyMedium">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextContent.BodyMedium.Bold">
        <item name="android:textStyle">bold</item>
    </style>

</resources>